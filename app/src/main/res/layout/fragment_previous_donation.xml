<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="26dp">

        <View
            android:layout_width="75dp"
            android:layout_height="8dp"
            android:background="@drawable/progress_indicator_active" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp" />

        <View
            android:layout_width="75dp"
            android:layout_height="8dp"
            android:background="@drawable/progress_indicator_active" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp" />

        <View
            android:layout_width="75dp"
            android:layout_height="8dp"
            android:background="@drawable/progress_indicator_active" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp" />

        <View
            android:layout_width="75dp"
            android:layout_height="8dp"
            android:background="@drawable/progress_indicator_active" />
        <View
            android:layout_width="8dp"
            android:layout_height="8dp" />

        <View
            android:layout_width="75dp"
            android:layout_height="8dp"
            android:background="@drawable/progress_indicator_active" />
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have you donated before?"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/yesOrNoGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <RadioButton
            android:text="yes"
            android:id="@+id/yes"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginEnd="45dp"
            android:gravity="center"
            android:button="@null"
            android:padding="20dp"
            android:background="@drawable/button_background"
            android:drawableTop="@drawable/correct_icon" />

        <RadioButton
            android:text="no"
            android:id="@+id/no"
            android:layout_width="120dp"
            android:padding="20dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/wrong_icon"
            android:background="@drawable/button_background" />
    </RadioGroup>

    <TextView
        android:id="@+id/dateChoiceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Date of Donation"
        android:layout_marginTop="20dp"
        />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/doneBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/btn_bg"
        android:text="Done"
        android:fontFamily="@font/inter_sb"
        android:textColor="@color/white"/>

</LinearLayout>